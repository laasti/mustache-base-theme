{
    "tasksDir": "./tasks",
    "compileDirs": {
        "dist": "./dist",
        "publish": "./publish",
        "public": "./public"
    },
    "assetsDir": "/assets",
    "data": {
        "langDir": "./lang",
        "langMainFile": "messages.json",
        "glob": "./data/**/*.json",
        "replaceBase": "./data/",
        "globalFile": "global.json",
        "templateVar": "template",
        "titleVar": "page_title",
        "contentVar": "content"
    },
    "pages": {
        "glob": "./pages/**/*"
    },
    "browserSync": {
        "index": "index.html"
    },
    "images": {
        "glob": "./src/images/**",
        "outputDir": "/images"
    },
    "bower": {
        "glob": "./vendor/**",
        "installDir": "./bower_components",
        "vendorDir": "./vendor",
        "outputDir": "/vendor",
        "concatFilename": "vendor.min"
    },
    "inject": {
        "css": {
            "glob": "/css/**"
        },
        "js": {
            "glob": [
                "/js/**",
                "!/js/ckeditor/**"
            ]
        },
        "js_head": {
            "glob": "/js/ckeditor/ckeditor.js"
        }
    },
    "js": {
        "glob": ["src/js/third-party/**/*.js", "src/js/*.js"],
        "outputDir": "/js",
        "concatFilename": "app.min.js"
    },
    "clean": {
        "glob": ["/**/*"]
    },
    "fontello": {
        "baseDir": "./src/fontello",
        "glob": "/font/**",
        "outputDir": "/fontello/font"
    },
    "views": {
        "baseDir": "./src/views",
        "glob": "/**/*.mustache",
        "compileGlob": "/views/*.mustache",
        "outputDir": "/views"
    },
    "sass": {
        "glob": "./src/scss/**",
        "outputDir": "/css",
        "concatFilename": "styles.min.css",
        "browsers": ["last 5 versions", "> 2%", "ie 8", "safari 5"]
    }
}